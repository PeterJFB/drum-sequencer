<GridPane fx:id="modal" stylesheets="@modal.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
 
    <AnchorPane fx:id="content">

        <GridPane fx:id="header" alignment="TOP_CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Text fx:id="title" text="Find a track" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS" />
 
            <StackPane fx:id="modalCloser" onMouseClicked="#closeTrackLoaderModal" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                <ImageView>
                    <image>
                        <Image url="@images/close.png" />
                    </image>
                </ImageView>
                <GridPane.margin>
                    <Insets right="15.0" top="15.0" />
                </GridPane.margin>
            </StackPane>

            <columnConstraints>
                <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            </rowConstraints>
        </GridPane>        

        <GridPane layoutX="61.0" layoutY="244.0">
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>

        </GridPane> 

        <TextField layoutX="63.0" layoutY="199.0" promptText="Track name ..." /> 
         
        <TextField layoutX="63.0" layoutY="297.0" promptText="Artist name ..." />

        <DatePicker layoutX="63.0" layoutY="386.0" prefHeight="56.0" prefWidth="392.0" />
         
        <Button fx:id="searchBtn" layoutX="63.0" layoutY="481.0" text="Search" />


    </AnchorPane>

    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>

</GridPane>
